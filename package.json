{
  "name": "@trafilea/shapermint-components",
  "description": "Shapermint Design System",
  "version": "1.0.7",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cm": "git-cz",
    "checkcommit": "node ./scripts/commit-lint.js",
    "clean": "npx rimraf -- node_modules package-lock.json && npm i"
  },
  "dependencies": {
    "bootstrap": "^4.4.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.12.1",
    "commitizen": "^4.1.2",
    "cz-customizable": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-connect": "^5.7.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "husky": "^4.2.5",
    "kss": "^3.0.0-beta.25"
  },
  "author": "Trafilea",
  "license": "Apache-2.0",
  "repository": "https://github.com/trafilea/ui-component-library",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "npm run checkcommit"
    }
  }
}
